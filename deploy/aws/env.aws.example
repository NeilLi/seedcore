# AWS EKS Deployment Configuration
# Copy this file to .env.aws and customize for your environment

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
CLUSTER_NAME=seedcore-eks-cluster
NODE_GROUP_NAME=seedcore-nodes

# ECR Configuration
ECR_REGISTRY=${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
ECR_REPO=${ECR_REGISTRY}/seedcore
ECR_NIM_REPO=${ECR_REGISTRY}/nim-retrieval
ECR_LLAMA_REPO=${ECR_REGISTRY}/nim-llama

# Image Configuration
SEEDCORE_IMAGE_TAG=latest
NIM_RETRIEVAL_TAG=latest
NIM_LLAMA_TAG=latest

# Kubernetes Configuration
NAMESPACE=seedcore-dev
SEEDCORE_NS=${NAMESPACE}

# Ray Configuration
RAY_HEAD_SVC=seedcore-svc-head-svc
RAY_HEAD_PORT=10001
RAY_ADDRESS=ray://${RAY_HEAD_SVC}:${RAY_HEAD_PORT}

# Service Configuration
SEEDCORE_API_ADDRESS=seedcore-api:8002
SERVICE_NAME=seedcore-api
REPLICAS=2

# Database Configuration
POSTGRES_PASSWORD=your-secure-password
MYSQL_ROOT_PASSWORD=your-secure-password
NEO4J_PASSWORD=your-secure-password
REDIS_PASSWORD=your-secure-password

# Storage Configuration
STORAGE_CLASS=gp3
STORAGE_SIZE=20Gi

# Ingress Configuration
INGRESS_HOST=seedcore.yourdomain.com
CERT_MANAGER_EMAIL=admin@yourdomain.com

# Resource Configuration
NODE_INSTANCE_TYPE=t3.large
MIN_NODES=2
MAX_NODES=10
DESIRED_NODES=3

# Monitoring Configuration
ENABLE_PROMETHEUS=true
ENABLE_GRAFANA=true


