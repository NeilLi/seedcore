FROM postgres:16

# Install build tools and PGVector extension
RUN apt-get update && \
    apt-get install -y postgresql-server-dev-16 gcc make git && \
    git clone --branch v0.8.0 https://github.com/pgvector/pgvector.git /pgvector && \
    cd /pgvector && make && make install && \
    rm -rf /pgvector && \
    apt-get remove --purge -y gcc make git && \
    apt-get autoremove -y && apt-get clean && rm -rf /var/lib/apt/lists/* 