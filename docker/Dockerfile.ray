# docker/Dockerfile.ray
FROM rayproject/ray:latest-cpu

RUN conda install -c conda-forge python=3.12 -y
RUN pip install "ray[default]"
RUN pip install numpy pandas scipy scikit-learn matplotlib seaborn jupyter redis asyncpg neo4j
# Install dashboard dependencies
RUN pip install prometheus_client aiohttp jinja2 psutil grpcio

ENV PATH=/opt/conda/envs/ray/bin:$PATH

RUN python --version && pip --version && python -c "import numpy; print(f'NumPy version: {numpy.__version__}')" 