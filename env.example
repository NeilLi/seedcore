# SeedCore Environment Configuration Example
# Copy this file to .env and update with your actual values

# Database Configuration
PG_DSN=postgresql://postgres:password@localhost:5432/postgres
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Ray Configuration (for remote Ray cluster)
# Uncomment and set these for remote Ray connection
# RAY_HOST=your-remote-vm-ip
# RAY_PORT=10001
# RAY_ADDRESS=ray://your-remote-vm-ip:10001
# RAY_PASSWORD=your-ray-password  # Optional
# RAY_NAMESPACE=seedcore
# RAY_IGNORE_REINIT_ERROR=true
# RAY_CONNECTION_TIMEOUT=30

# Redis Configuration (optional)
# REDIS_URL=redis://localhost:6379/0

# API Configuration
SEEDCORE_API_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000

# External Services (optional)
# RAGFLOW_API_URL=http://localhost:9380
# CHROMA_HOST=localhost
# CHROMA_PORT=8000

# Logging
LOG_LEVEL=INFO

# Development vs Production
ENVIRONMENT=development

# Ray Dashboard Configuration
# Set this to your public IP or domain for Grafana iframe access in Ray dashboard
# Example: PUBLIC_GRAFANA_URL=http://your-public-ip:3000
# Leave unset to use localhost (for local development)
# PUBLIC_GRAFANA_URL=http://localhost:3000 