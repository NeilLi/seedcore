{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.seedcore.ai/ops/eventizer/v1/patterns.json",
  "title": "Eventizer Patterns Configuration Schema",
  "description": "Schema for SeedCore Eventizer pattern bundles. Defines deterministic extraction rules for task routing.",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Bundle semantic version (e.g., 1.2.0). Must be compatible with the schema major version.",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "metadata": {
      "type": "object",
      "description": "Governance metadata for audit trails.",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "author": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" },
        "domains": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Target domains (e.g., hotel_ops, robotics)."
        },
        "engine_compat": {
          "type": "object",
          "description": "Engine compatibility constraints to prevent silent behavioral drift.",
          "additionalProperties": false,
          "properties": {
            "min_engine_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
            "max_engine_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" }
          }
        }
      },
      "required": ["name", "description", "updated_at"]
    },
    "settings": {
      "type": "object",
      "description": "Global engine settings and resource limits.",
      "additionalProperties": false,
      "properties": {
        "default_case_sensitive": { "type": "boolean", "default": false },
        "default_whole_word": { "type": "boolean", "default": true },
        "default_priority": { "type": "integer", "minimum": 0, "maximum": 1000, "default": 100 },
        "default_confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0, "default": 0.8 },
        "max_patterns": { "type": "integer", "minimum": 1, "default": 20000 },
        "enable_aho_corasick": { "type": "boolean", "default": true },
        "enable_regex_optimization": { "type": "boolean", "default": true },
        "locale": { "type": "string", "default": "en-US" },
        "budget_ms_soft": { "type": "number", "default": 40 },
        "budget_ms_hard": { "type": "number", "default": 100 },
        "max_regex_length": { "type": "integer", "default": 4096 },
        "max_keywords_total": { "type": "integer", "default": 200000 },
        "normalization": {
          "type": "object",
          "description": "Text normalization configuration used before pattern matching. Ensures deterministic behavior across engine versions.",
          "additionalProperties": false,
          "properties": {
            "tier": {
              "type": "string",
              "enum": ["aggressive", "cognitive"],
              "default": "aggressive",
              "description": "Normalization tier: aggressive (collapses punctuation) for fast-path, cognitive (preserves sentiment) for deep reasoning"
            },
            "case": {
              "type": "string",
              "enum": ["lower", "upper", "title", "preserve"],
              "default": "lower",
              "description": "Case normalization mode"
            },
            "fold_accents": {
              "type": "boolean",
              "default": false,
              "description": "Strip diacritics from characters"
            },
            "strip_audio_tags": {
              "type": "boolean",
              "default": true,
              "description": "Remove audio transcript artifacts like [laughter], (clears throat)"
            },
            "standardize_units": {
              "type": "boolean",
              "default": true,
              "description": "Normalize units: '6 PM' -> '18:00', '100 sqft' -> '100 sqft'"
            },
            "join_split_tokens": {
              "type": "boolean",
              "default": true,
              "description": "De-obfuscation: join 'v-i-p' -> 'vip', 'S.E.C.U.R.I.T.Y' -> 'security'"
            },
            "join_max_token_len": {
              "type": "integer",
              "minimum": 1,
              "maximum": 32,
              "default": 6,
              "description": "Maximum token length for de-obfuscation joining"
            }
          }
        }
      }
    },

    "tag_aliases": {
      "type": "object",
      "description": "Maps internal shorthand to canonical event types.",
      "additionalProperties": { "type": "string" }
    },

    "regex_patterns": {
      "type": "array",
      "description": "High-precision patterns using regular expressions.",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^[a-zA-Z0-9:_-]+$" },
          "pattern": { "type": "string", "minLength": 1 },
          "flags": { "type": "integer", "default": 0 },
          "priority": { "type": "integer", "minimum": 0, "maximum": 1000 },
          "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "event_types": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "description": { "type": "string" },
          "whole_word": { "type": "boolean" },
          "case_sensitive": { "type": "boolean" },
          "enabled": { "type": "boolean", "default": true },
          "emits_tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "emits_attributes": {
            "type": "object",
            "description": "Key-value pairs injected into the task context on match.",
            "additionalProperties": true
          },
          "metadata": { "type": "object", "additionalProperties": true }
        },
        "required": ["id", "pattern", "event_types"]
      }
    },

    "keyword_patterns": {
      "type": "array",
      "description": "High-performance keyword sets (Aho-Corasick).",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^[a-zA-Z0-9:_-]+$" },
          "keywords": {
            "type": "array",
            "items": { "type": "string", "minLength": 1, "maxLength": 128 },
            "minItems": 1
          },
          "priority": { "type": "integer" },
          "confidence": { "type": "number" },
          "event_types": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "description": { "type": "string" },
          "whole_word": { "type": "boolean" },
          "case_sensitive": { "type": "boolean" },
          "enabled": { "type": "boolean", "default": true },
          "emits_tags": { "type": "array", "items": { "type": "string" } },
          "emits_attributes": { "type": "object", "additionalProperties": true },
          "metadata": { "type": "object", "additionalProperties": true }
        },
        "required": ["id", "keywords", "event_types"]
      }
    },

    "entity_patterns": {
      "type": "array",
      "description": "Context-aware entity extraction rules.",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^[a-zA-Z0-9:_-]+$" },
          "entity_type": { "type": "string" },
          "patterns": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "regex": { "type": "string" },
                "keywords": { "type": "array", "items": { "type": "string" } },
                "context": { "type": "string" }
              },
              "anyOf": [ { "required": ["regex"] }, { "required": ["keywords"] } ]
            }
          },
          "priority": { "type": "integer" },
          "confidence": { "type": "number" },
          "event_types": { "type": "array", "items": { "type": "string" } },
          "description": { "type": "string" },
          "enabled": { "type": "boolean", "default": true },
          "emits_tags": { "type": "array", "items": { "type": "string" } },
          "emits_attributes": { "type": "object", "additionalProperties": true },
          "metadata": { "type": "object", "additionalProperties": true }
        },
        "required": ["id", "entity_type", "patterns", "event_types"]
      }
    },

    "composite_rules": {
      "type": "array",
      "description": "Boolean logic rules combining multiple signals.",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^[a-zA-Z0-9:_-]+$" },
          "any_of": { "type": "array", "items": { "type": "string" } },
          "all_of": { "type": "array", "items": { "type": "string" } },
          "none_of": { "type": "array", "items": { "type": "string" } },
          "emits_tags": { "type": "array", "items": { "type": "string" } },
          "emits_attributes": { "type": "object", "additionalProperties": true },
          "priority": { "type": "integer" },
          "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "description": { "type": "string" },
          "enabled": { "type": "boolean", "default": true }
        },
        "required": ["id"]
      }
    }
  },
  "required": ["version", "regex_patterns", "keyword_patterns"],
  "additionalProperties": false
}