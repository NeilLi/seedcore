# Postgres (use the service name 'postgres')
PG_DSN=postgresql://postgres:password@postgres:5432/postgres

# Neo4j (use the service name 'neo4j')
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Ray (use the service name 'ray-head' for the head node)
RAY_HOST=ray-head
RAY_PORT=10001
RAY_ADDRESS=ray://ray-head:10001
RAY_NAMESPACE=seedcore
RAY_IGNORE_REINIT_ERROR=true
RAY_CONNECTION_TIMEOUT=30

# Redis (use the service name 'ray-redis')
REDIS_URL=redis://ray-redis:6379/0

# API Configuration
SEEDCORE_API_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Development vs Production
ENVIRONMENT=development

# MYSQL
MYSQL_HOST=seedcore-mysql
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=seedcore
MYSQL_USER=seedcore
MYSQL_PASSWORD=password
MYSQL_PORT=3306